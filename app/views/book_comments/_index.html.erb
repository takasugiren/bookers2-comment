<% book.book_comments.each do |book_comment| %>
  <tr>
    <td>
      <%= link_to user_path(book_comment.user.id) do %>
      <%= attachment_image_tag book_comment.user, :profile_image, :fill, 50, 50, fallback: "no-image-icon.jpg" %><br>
      <%= book_comment.comment %>
      <% end %>
    </td>
    <td>
      <%= book_comment.user.name %>
    </td>
    <td>
      <% if book_comment.user == current_user %>
      <%= link_to "Destroy", book_book_comment_path(book_comment.book_id, book_comment.id), method: :delete, remote: true, class: "btn btn-sm btn-danger" %>
      <% end %>
    </td>
  </tr>
<% end %>